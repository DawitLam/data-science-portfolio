FROM python:3.11-slim

WORKDIR /app

# Install system deps for common libraries (build-essential not included on slim by default)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy minimal files for install
COPY requirements.txt /app/requirements.txt
RUN python -m pip install --upgrade pip && pip install --no-cache-dir -r /app/requirements.txt

# Copy repository
COPY . /app

EXPOSE 8000
ENV PYTHONUNBUFFERED=1

# Default command (adjust module path if your API location differs)
CMD ["uvicorn", "projects.01-fracture-risk-ml.src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
